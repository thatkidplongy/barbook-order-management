{
  "name": "barbook",
  "version": "1.0.0",
  "description": "Full-stack order management application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "server:dev": "nodemon -r ts-node/register server/index.js",
    "client:dev": "cd client && yarn dev",
    "server:start": "node -r ts-node/register server/index.js",
    "client:build": "cd client && yarn build",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed": "node server/seed.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "nodemon": "^3.0.1",
    "react-dom": "^19.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "sqlite",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
